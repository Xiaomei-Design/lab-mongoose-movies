{{#with movie}}

<form action="/movies/edit/{{_id}}" method="POST">
    <label for="title">Title: </label>
    <input type="text" name="title" id="title" value="{{title}}">

    <label for="genre">Genre: </label>
    <input type="text" list="genres" name="genre" id="genre" value="{{genre}}">
    <datalist name="genre" id="genres">
      <option>Drama</option>
      <option>Action</option>
      <option>Adventure</option>
      <option>Biography</option>
      <option>Comedy</option>
      <option>Crime</option>
      <option>Family</option>
      <option>Fantasy</option>
      <option>History</option>
      <option>Musical</option>
      <option>Mystery</option>
      <option>Romance</option>
      <option>Sci-Fi</option>
      <option>War</option>
      <option>Western</option>
  </datalist>

  <label for="plot">Plot: </label>
  <textarea type="text" name="plot" id="plot" value="{{plot}}"></textarea>

  <label for="cast">Cast: </label>
  <input type="text" name="cast" id="cast" value="{{cast}}">
    
 <button type="submit">Submit</button>

</form>

{{/with}}